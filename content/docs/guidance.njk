          </h2>
          <p class="pb-0 small text-secondary mb-0 pb-3">A podcast overview of {{ guide.title }} made with Google NotebookLM.</p>
          <script src="/js/plyr.js"></script>
          <div tabindex="0" class="plyr plyr--full-ui plyr--audio plyr--html5 plyr--paused plyr--stopped">
            <audio id="player">
              <source src="{{ guide.audio }}" type="audio/mp3">
            </audio>
          </div>
          <script>
            const plyr = new Plyr('#player', {
              controls: [
                'play',
                'progress',
                'current-time',
                'duration',
                'mute',
                'volume'
              ]
            });
          </script>
        </div>
      {% endif %}

      {% for section in guide.sections %}
        <h2>{{ section.title }}</h2>

        {{ section.content | safe }}
      {% endfor %}

      <ul>
      {% for item in guide.links %}
        <li><a href="{{ item.link }}">{{ item.text }}</a></li>
      {% endfor %}
      </ul>

      <h2>Indicator</h2>
      <ul class="list-inline pt-3">
        {% for item in guide.topics %}
          <li class="list-inline-item mr-1 mb-3">
            <a href="/{{ item }}" class="btn btn-primary-outline">{{ item }}</a>
          </li>
        {% endfor %}
      </ul>
      
    </div>
    <div class="col-12 col-sm-12 col-md-2 col-lg-2 col-xxl-2"></div>
